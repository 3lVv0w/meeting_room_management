<div style="text-align: center;">
  <h1>Reservation Form</h1>
</div>
<div class="form-group">
  <%= form_for @reservation, url: meeting_room_reservation_path do |f| %>
    <div class="form-group">
      <h2><%= f.label :topic, "Please Enter you Topic" %></h2>
    </div>
    <div class="form-group">
      <%= f.text_field :topic, class: "form-control", require: true %>
    </div>
    <%= f.hidden_field :user_id, value: 1 %>
    <div style="display: block; margin: auto;">
      <%= f.submit "Take a Reservation", class: "btn btn-warning"%>
    </div>
  <% end %>
</div>